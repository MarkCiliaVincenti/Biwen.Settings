@using Microsoft.Extensions.Options;
@using Biwen.Settings;
@inject IOptions<SettingOptions> SettingOptions;

@{
    var settings = ViewBag.Settings as IEnumerable<Biwen.Settings.Domains.Setting>;
    Layout = SettingOptions.Value.Layout;
    ViewData["Title"] = SettingOptions.Value.Title;
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">描述</th>
            <th scope="col">排序</th>
            <th scope="col">编辑</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var setting in settings!)
        {
            <tr>
                <th scope="row">@(setting.SettingName)</th>
                <td>@(setting.Description)</td>
                <td>@(setting.Order)</td>
                <td>@Html.ActionLink("编辑","Edit","Setting",new{ id= setting.SettingName })</td>
            </tr>
        }

    </tbody>
</table>